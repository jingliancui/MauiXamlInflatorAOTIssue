<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.MainPage"
             xmlns:local="clr-namespace:SampleApp"
             x:DataType="local:MainPageViewModel">

    <ScrollView>
        <CollectionView
            ItemsSource="{Binding ProductList}">
            <CollectionView.ItemTemplate>
                <DataTemplate
                    x:DataType="local:CollectionViewViewModel">
                    <Button
                        Command="{Binding x:DataType='local:MainPageViewModel', Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}},Path=UserClickCommand}"
                        CommandParameter="{x:Binding .}"
                        Text="{Binding ProductName,Mode=TwoWay}"></Button>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>

</ContentPage>
